@model List<Position>

@{
    ViewData["Title"] = "Справочник должностей";
    ViewData["Description"] = "список должностей";
}
<table class="table table-striped table-bordered table-advance table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Create At</th>
            <th>Greated By</th>
            <th>Name</th>
            <th>Description</th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Position item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.CreateAt</td>
                <td>@item.CreatedBy</td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>
                    <a href="@Url.Action("EditPosition", "Home", new{id=item.Id})">edit</a>
                </td>
                <td>
                    <a href="@Url.Action("DeletePosition", "Home", new{id=item.Id})">delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<hr />
<a href="@Url.Action("EditPosition", "Home")" class="btn btn-default">Add Position</a>