@model TeamViewModel

<div class="portlet light bordered">
	<div class="portlet-title">
		<div class="caption">
			<i class="icon-equalizer font-red-sunglo"></i>
			<span class="caption-subject font-red-sunglo bold uppercase">Add Team</span>
			<span class="caption-helper">form actions without bg color</span>
		</div>
		<div class="actions">
			<div class="portlet-input input-inline input-small">
				<div class="input-icon right">
					<i class="icon-magnifier"></i>
					<input type="text" class="form-control input-circle" placeholder="search...">
				</div>
			</div>
		</div>
	</div>
	<div class="portlet-body form">
		<!-- BEGIN FORM-->
		<form asp-action="EditTeam" asp-controller="Home"
			  class="form-horizontal" method="post"
			  enctype="multipart/form-data">
			<div class="form-body">
				<div class="form-group">
					<label class="col-md-3 control-label">FirstName</label>
					<div class="col-md-4">
						<input type="text" class="form-control" placeholder="Enter text"
							   asp-for="Team.FirstName">
						<span class="help-block">
							Enter FirstName team.
						</span>
					</div>
				</div>
				<div class="form-group last">
					<label class="col-md-3 control-label">SecondName</label>
					<div class="col-md-4">
						<input type="text" class="form-control" placeholder="Enter text"
							   asp-for="Team.SecondName">
						<span class="help-block">
							Enter SecondName team.
						</span>
					</div>
				</div>
				<div class="form-group last">
					<label class="col-md-3 control-label">MiddleName</label>
					<div class="col-md-4">
						<input type="text" class="form-control" placeholder="Enter text"
							   asp-for="Team.MiddleName">
						<span class="help-block">
							Enter MiddleName team.
						</span>
					</div>
				</div>
				<div class="form-group last">
					<label class="col-md-3 control-label">AboutTeam</label>
					<div class="col-md-4">
						<input type="text" class="form-control" placeholder="Enter text"
							   asp-for="Team.AboutTeam">
						<span class="help-block">
							Enter AboutTeam.
						</span>
					</div>
				</div>
				<div class="form-group last">
					<label class="col-md-3 control-label">ImagePath</label>
					<div class="col-md-4">
						<input type="file" class="form-control"
							   name="ImagePath">
						<span class="help-block">
							Enter ImagePath.
						</span>
					</div>
				</div>

				<hr />

				<div class="form-group last">
					<label class="col-md-3 control-label">Position</label>
					<div class="col-md-4">

						<select asp-for="Team.PositionId" class="form-control input-medium select2me" data-placeholder="Select...">
							<option value=""></option>
							@foreach (Position pos in Model.Positions)
							{
								<option value="@pos.Id">@pos.Name</option>
							}
						</select>

						<span class="help-block">
							Select Position.
						</span>
					</div>
				</div>
			</div>
			<div class="form-actions">
				<div class="row">
					<div class="col-md-offset-3 col-md-9">
						<button type="submit" class="btn green">Submit</button>
						<button type="button" class="btn default">Cancel</button>
					</div>
				</div>
			</div>
		</form>
		<!-- END FORM-->
	</div>
</div>